<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
  <Title>GoogleAdsense.OrchardCore</Title>
    <Description>Module for Orchard Core that allows you to integrate Google Adsense to your website.</Description>
    <Authors>Nicolas Maluleke</Authors>
    <Company>Nicolas Maluleke</Company>
    <Language>C#</Language>
    <Summary>GoogleAdsense module for Orchard Core</Summary>
    <PackageProjectUrl>https://github.com/hnicolus/GoogleAdsense.OrchardCore</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/hnicolus/GoogleAdsense.OrchardCore</RepositoryUrl>
    <PackageTags>GoogleAdsense, Orchard Core, Module, OrchardCore</PackageTags>
    <PackageReleaseNotes>Add the nuget package reference GoogleAdsense.OrchardCore
Launch your Orchard Core application, login as admin, then go to the Features admin page and enable the GoogleAdsense module Launch your Orchard Core application.
Go to Configuration > Settings > GoogleAdsense and Add your google ad client key</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>GoogleAdsense.OrchardCore</RepositoryType>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Admin" Version="1.2.2" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.2.2" />
    <PackageReference Include="OrchardCore.ContentManagement" Version="1.2.2" />
    <PackageReference Include="OrchardCore.ContentTypes.Abstractions" Version="1.2.2" />
    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.2.2" />

    <PackageReference Include="OrchardCore.Navigation" Version="1.2.2" />
    <PackageReference Include="OrchardCore.ResourceManagement" Version="1.2.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Constants\" />
  </ItemGroup>

</Project>
